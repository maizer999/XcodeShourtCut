<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/colorMainWhite"
        app:cardCornerRadius="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/lbl_product_price"
                android:layout_marginStart="8dp"
                style="@style/txt.blue.16"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="54dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/lbl_gray_3"
                android:text="1.50"/>

            <TextView
                android:id="@+id/lbl_product_name"
                android:layout_marginStart="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Product Name"
                android:textSize="14dp"
                android:textColor="@color/colorTextBlack"/>

            <TextView
                android:id="@+id/lbl_product_minuse"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/lbl_orange_4"
                android:text="-"
                android:textColor="@color/colorMainWhite"
                android:textSize="@dimen/txt_18"
                android:gravity="center"/>

            <TextView
                android:id="@+id/lbl_product_count"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                style="@style/txt.gray.14"
                android:fontFamily="@font/roboto_bold"
                android:text="1"/>

            <TextView
                android:id="@+id/lbl_product_plus"
                android:layout_marginEnd="12sp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/lbl_green_4"
                android:text="+"
                android:textColor="@color/colorMainWhite"
                android:textSize="@dimen/txt_18"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>